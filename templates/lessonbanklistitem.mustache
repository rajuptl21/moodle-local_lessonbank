<table class="table table-bordered table-striped table-responsive listtable">
    <thead class="thead-dark">
        <tr>
            <th class="header c0"></th>
            <th>{{#str}}title, local_lessonbank{{/str}}</th>
            <th class="lnagcolumn">{{#str}}targetlang, local_lessonbank{{/str}}</th>
            <th class="levelcolumn">{{#str}}level, local_lessonbank{{/str}}</th>
            <th class="keywordcolumn">{{#str}}keywords, local_lessonbank{{/str}}</th>
            <th class="listdescription">{{#str}}description{{/str}}</th>
            <th>{{#str}}items, local_lessonbank{{/str}}</th>
            <th>{{#str}}actions{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#lessonitems}}
        <tr>
            <td><img src="{{posterimage}}" alt="{{name}}" class="searchimg img-responsive"></td>
            <td>{{name}}</td>
            <td class="lnagcolumn">{{language}}</td>
            <td class="levelcolumn">{{languagelevel}}</td>
            <td class="levelcolumn"></b>{{keywords}}</p></td>
            <td>
                <p data-text={{#quote}}{{{description}}}{{/quote}}>
                    <b class="mr-2">{{#str}}descriptioncolon, local_lessonbank{{/str}}</b>
                    {{{ shortdesc }}}
                </p>
            </td>
            <td>{{itemcount}}</td>
            <td>
                <a href="{{viewurl}}" class="btn btn-primary text-white rounded">{{#str}}preview{{/str}}</a>
                <a data-id="{{id}}" data-action="download" data-download="{{name}}" class="btn btn-primary text-white rounded ml-1">
                    {{#str}}download{{/str}}
                </a>
            </td>
        </tr>
    {{/lessonitems}}
    {{^lessonitems}}
        <tr>
            <td colspan="7">
                <p class="text-center"><b>{{#str}}nolessonitemfound, local_lessonbank{{/str}}</b></p>
            </td>
        </tr>
    {{/lessonitems}}
    </tbody>
</table>